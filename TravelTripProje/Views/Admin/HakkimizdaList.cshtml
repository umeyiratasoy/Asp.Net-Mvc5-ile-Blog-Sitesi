@using TravelTripProje.Models.Siniflar
@model List<Hakkimizda>
@{
    ViewBag.Title = "HakkimizdaList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hakkımda</h2>

<table class="table table-bordered">
    <tr>
        <th class="hidden">Id</th>
        <th>FotoUrl</th>
        <th>Açıklama</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>


            <td class="hidden">@x.ID</td>
            <td><img src="@x.FotoUrl" width="300" height="300" /></td>
            <td>@x.Aciklama</td>
            <td><a href="/Admin/HakkimizdaGetir/@x.ID" class="btn btn-warning">Güncelle</a></td>

        </tr>
    }
</table>

